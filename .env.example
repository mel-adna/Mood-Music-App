# Mood Music App - Environment Configuration Template
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env with real credentials to version control!

# Spotify API Credentials
# Get these from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=moodmusic://callback

# App Configuration
APP_PACKAGE_NAME=com.example.mood_music_app
APP_SCHEME=moodmusic

# Feature Flags
ENABLE_MOCK_EMOTION_DETECTION=true
ENABLE_SPOTIFY_INTEGRATION=true
ENABLE_EMOTION_HISTORY=true

# Development Settings
IS_DEBUG_MODE=true
